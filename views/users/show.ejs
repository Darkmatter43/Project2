<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <%- include ('../partials/nav.ejs')%>
    <h1>Allied Armaments</h1>
    <%for (i=0;i< currentUser.arms.length;i++){%>
        <div class='show-div'>
            <img src="<%=currentUser.arms.img%>" alt="<%=currentUser.arms.name%>">
            <h2><%=currentUser.arms.name%></h2>
            <h5>User: <%=currentUser.arms.owner%></h5>
            <p><%=currentUser.arms.description%></p>
            <p>Source: <%=currentUser.arms.videoGame%></p>
            <form action="/">
                <input type="submit" name="" value="Return to Index">
            </form>
        </div>
    <%}%>
    <form action="/armaments" method='POST'>
        <input type="submit" value='Return to Index'>
    </form>
</body>
</html>